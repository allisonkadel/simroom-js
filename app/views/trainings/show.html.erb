<fieldset>
<legend> <%= @training.name %> </legend>

<%= render :partial => "attributes", :locals => {:training => @training} %>

</fieldset>

<%= admin_edit_button %>
<%= admin_cancel_button %>

<%= link_to "Back to Trainings", trainings_path, :class => "back_to_trainings" %>





<script id="training-template" type="text/x-handlebars-template">
    <fieldset>
        <legend> <a class="show_link" href="/trainings/{{id}}">{{name}}</a> </legend>

<p> Description: {{description}} </p>
<p> Room: {{simroom}} </p>
