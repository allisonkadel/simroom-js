<h3> Create a User Account </h3>

<%= form_for @user do |f| %>
    <%= f.label :email %><br>
    <%= f.text_field :email, :placeholder => @user.errors.full_messages_for(:email).first %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password, :placeholder => @user.errors.full_messages_for(:password).first %><br>

    <%= f.label :confirm_password %><br>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit "Create Account" %>
<% end %>